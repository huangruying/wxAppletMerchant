.merchant_name2{
  color: #666;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 13rpx;
  margin-top: 5rpx;
}
.merchant_name{
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.input_code{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.input_code >image{
  width: 58rpx;
  height: 58rpx;
  padding: 0;
  margin: 0;
}
.input_code .code{
  flex: 1;
}
.plate_btn{
  background-color: #0F8FFF;
  color: #fff;
  text-align: center;
  border-radius: 8px;
  height: 95rpx;
  line-height: 95rpx;
  margin-top: 30px;
}
.plate_btn:active{
  background-color: rgba(0, 0, 0, 10%);
}
.input_plate{
  position: relative;
}
.input_plate .van-field__input{
  padding-left: 100rpx;
}
.input_plate .icon_show{
  display: flex;
  align-items: center;
  position: absolute;
  top: 50%;
  left: 100rpx;
  transform: translateY(-50%);
  background-color: #f3f3f3;
  border-radius: 7rpx;
  padding: 4rpx 8rpx;
}
.input_plate .icon_show:active{
  background-color: rgba(0, 0, 0, 10%);
}
.icon_show >image{
  width: 17rpx;
  height: 10rpx;
  margin-left: 10rpx;
}
.tabbar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:  15rpx 100rpx;
  /* border-top: ; */
  box-shadow:0px 3px 18px 0px rgba(0, 0, 0, 0.09);
}
.tabbar .box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tabbar .box >image{
  width: 47rpx;
  height: 47rpx;
}
.tabbar .box >view{
  font-size: 25rpx;
  margin-top: 8rpx;
}